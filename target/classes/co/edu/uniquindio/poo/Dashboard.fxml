<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Circle?>

<BorderPane fx:id="mainContainer" styleClass="main-root"
            stylesheets="@styles1.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.controllers.DashboardController">

    <!-- TOP HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10"/>
            </padding>

            <Label styleClass="logo-title" text="Gestión de Motos">
                <font>
                    <Font name="System Bold" size="22"/>
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox fx:id="sideBar" maxWidth="230" minWidth="230" styleClass="sidebar">
            <padding>
                <Insets top="20" left="15" right="15" bottom="20"/>
            </padding>

            <Label alignment="TOP_LEFT" styleClass="menu-title" text="Menú Principal">
                <VBox.margin>
                    <Insets bottom="15"/>
                </VBox.margin>
            </Label>

            <Button fx:id="btnGoToForm" onAction="#onGoToForm"
                    prefWidth="200" styleClass="menu-button"
                    text="➕ Crear Moto"/>
            <Button fx:id="btnGoToList" onAction="#onGoToList"
                    prefWidth="200" styleClass="menu-button"
                    text="📋 Ver Listado"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Separator styleClass="sidebar-separator"/>
            <Button fx:id="btnLogout" styleClass="menu-button-logout"
                    text="⏻ Cerrar Sesión"/>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <VBox alignment="CENTER" spacing="15">
                <Label styleClass="title" text="Bienvenido al Panel de Control"/>
                <Label styleClass="welcome-text"
                       text="Selecciona una opción del menú lateral para comenzar."/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
